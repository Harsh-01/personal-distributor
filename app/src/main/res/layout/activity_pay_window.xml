    </RelativeLayout>

    <TextView
        android:layout_below="@+id/rrcontent"
        android:id="@+id/txtlabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btnPayFor"
        android:layout_width="200dp"
        android:layout_below="@+id/txtlabel1"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_a"
        android:textColor="#ffffff"
        android:text="Payment For?"
        android:textAllCaps="false"
        android:layout_margin="20dp"
        android:textSize="18sp"/>
    <Spinner
        android:layout_width="200dp"
        android:id="@+id/paywith"
        android:layout_height="wrap_content"
        android:entries="@array/payMode"
        android:popupBackground="@drawable/background_a"
        android:textAlignment="center"
         android:layout_below="@+id/btnPayFor"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@drawable/background_a"
        />


    <Button
        android:id="@+id/btnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paywith"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_a"
        android:textColor="#ffffff"
        android:text="Pay"
        android:layout_marginTop="40dp"
        android:textSize="18sp"/>
