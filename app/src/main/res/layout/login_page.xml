<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity"
    android:background="@drawable/scale1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutLogin"
        android:orientation="vertical"
        android:layout_centerVertical="true">
    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_logo07"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/etregistered_No"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email ID or Mobile Number"
        android:drawableStart="@drawable/ic"
        android:textColorHint="#ffffff"
        android:drawablePadding="10dp"
        android:background="@drawable/button_background2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/imglogo"
        android:textColor="#e3f2fd"
        android:textSize="18sp"
        android:padding="10dp"
        android:inputType="text"
        android:layout_marginTop="45dp"/>
    <EditText
        android:id="@+id/etpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColorHint="#ffffff"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:layout_below="@+id/etregistered_No"
        android:background="@drawable/button_background2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:padding="10dp"
        android:inputType="textPassword"/>
    <TextView
        android:id="@+id/txtforgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot"
        android:layout_below="@id/etpassword"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#1a237e"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_gravity=""
        android:layout_marginBottom="2dp"
        android:layout_alignEnd="@+id/etpassword"
        />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"
            android:background="@drawable/next_page_background"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:layout_below="@id/txtforgotPassword"
            android:textColor="#ffffff"
            android:textSize="18sp"/>



        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="200dp"
            android:background="@drawable/next_page_background"
            android:popupBackground="@drawable/next_page_background"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="-59dp"
            android:entries="@array/register_options"
            android:layout="@+id/register"
            android:padding="10dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textColor="#4a148c"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>